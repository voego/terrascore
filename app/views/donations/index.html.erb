<div class="container">
  <h1>Donations</h1>
  <div class="row">
    <% @donations.each do |donation| %>
    <div class="card">
      <%= cl_image_tag donation.photo %>
      <div class="card-infos">
        <div>
          <h5 class="card-title"><%= donation.name %></h5>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>

