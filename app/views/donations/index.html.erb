<div class="container">
  <div class="donations-intro">
    <h1>Partnering Charities</h1>
    <p>Increase your terrascore by donating to one of the following charities </p>
  </div>
  <div class="cards">
    <% @donations.each do |donation| %>
    <div class="card">
      <%= cl_image_tag donation.photo %>
      <div class="card-infos">
        <h5 class="card-title"><%= link_to donation.name, donation_path(donation)  %></h5>
      </div>
    </div>
    <% end %>
  </div>
</div>

