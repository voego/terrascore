<div class="progress-header">
  <div class="progress-container">
    <div class="progress-bar" id="myBar"></div>
  </div>
</div>

<div class="answer-new-container">

  <div class="category-section">

    <div class="category-header">
      <h2>Travel</h2>
      <p>Please answer the following questions about your travel lifestyle</p>
    </div>

    <div class="category-questions">
      <% @questions.where(category_id: 1).each do |question| %>
        <div class="question" id="<%= @questions.index(question) %>">
          <h4><%= question.content %></h4>
          <% question.options.each do |option| %>
            <input type="checkbox" name="answer" id="option-<%= option.id %>" class="options" data-option="<%= option.id %>">
            <p><%= option.content %></p>
          <% end %>
        </div>
      <% end %>
    </div>

  </div>

