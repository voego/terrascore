<h2>Questionnaire Draft</h2>

<% @questions.each do |question| %>
  <div class="question">
    <h2><%= question.content %></h2>
    <% question.options.each do |option| %>
      <input type="checkbox" name="answer" id="option-<%= option.id %>" class="options" data-option="<%= option.id %>">
      <p><%= option.content %></p>
    <% end %>
  </div>
<% end %>

<br>
<%= link_to "Submit", user_path(current_user), id:"submit"  %>
